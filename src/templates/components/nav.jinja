{% from "components/icons.jinja" import logo_long, logo_long_with_text, hamburger, moon, user %}


{% macro nav(logo_text) %}
    <nav class="w-full">
        <div class="w-full px-5 py-3 bg-slate-100 dark:bg-slate-800 flex items-center justify-between">
            <div class="flex items-center gap-3">
                {# TODO: Implement opening up the sidebar using this button #}
                <div class="hamburger-button">
                    {{ hamburger() }}
                </div>
                {% if logo_text %}
                    {{ logo_long_with_text(logo_text) }}
                {% else %}
                    {{ logo_long() }}
                {% endif %}
            </div>
            <div class="flex items-center gap-1">
                {# TODO: Implement switching themes using this button #}
                <div class="theme-button">
                    {{ moon() }}
                </div>
                {# TODO: Implement user options using this button #}
                <div class="user-button">
                    {{ user() }}
                </div>
            </div>
        </div>
    </nav>
{% endmacro %}