{% from "components/icons.jinja" import identification, email, lock %}


{% macro register_form(form) %}
    <div class="w-full max-w-screen-sm">
        <form action="{{ url_for("auth.register") }}" method="post">
            <div class="flex flex-col w-full gap-5">
                <div class="flex flex-col gap-3 w-full text-xs">
                    {{ _form_field(form.username, identification, "Username") }}
                    {{ _form_field(form.email, email, "Email") }}
                    {{ _form_field(form.password, lock, "Password") }}
                    {{ _form_field(form.password_confirmation, lock, "Password Confirmation") }}
                </div>
                <button type="submit" class="w-full rounded-lg bg-gradient-to-r from-indigo-800 to-indigo-500 py-1.5 text-sm font-extralight text-slate-100 transition-all duration-300 ease-in-out">Register</button>
                <div class="w-full text-center">
                    <a
                        href="{{ url_for("auth.login") }}"
                        class="text-2xs font-thin text-slate-500 underline dark:text-slate-400"
                    >
                        Already have an account? Login
                    </a>
                </div>
            </div>
        </form>
    </div>
{% endmacro %}

{% macro login_form(form) %}
    <div class="w-full max-w-screen-sm">
        <form action="{{ url_for("auth.login") }}" method="post">
            <div class="flex flex-col w-full gap-5">
                <div class="flex flex-col gap-3 w-full">
                    {{ _form_field(form.username_or_email, identification, "Username Or Email") }}
                    {{ _form_field(form.password, lock, "Password") }}
                </div>
                <button type="submit" class="w-full rounded-lg bg-gradient-to-r from-indigo-800 to-indigo-500 py-1.5 text-sm font-extralight text-slate-100 transition-all duration-300 ease-in-out">Login</button>
                <div class="w-full text-center">
                    <a
                        href="{{ url_for("auth.register") }}"
                        class="text-2xs font-thin text-slate-500 underline dark:text-slate-400"
                    >
                        Don't have an account? Register
                    </a>
                </div>
            </div>
        </form>
    </div>
{% endmacro %}

{% macro _form_field(field, icon, placeholder) %}
    <div class="flex flex-col w-full md:gap-1">
        {{ field.label(class="text-slate-500 dark:text-slate-400 text-sm font-extralight") }}
        <div class="flex py-1.5 px-1 gap-2 items-center border-b border-b-slate-400 dark:border-b-slate-500">
            {{ icon(class="text-slate-500 dark:text-slate-300 h-6 font-extralight md:h-8") }}
            {{
                field(
                    class="outline-none bg-transparent w-full h-full text-slate-600 dark:text-slate-300 text-sm",
                    value=request.form[field.name],
                    placeholder=placeholder
                )
            }}
        </div>
    </div>
{% endmacro %}